<% provide(:title, 'Category Admin') %>
<div class="container">
    <div class="w-100">
        <span class="h4 text-dark">Words List for "<span class="fw-bolder"><%= @category.title %></span>" Category</span>
        <%= link_to 'Add Word', new_admin_category_path, class: "mb-3 btn btn-success float-end" %>
        <p><%= @category.description %></p>
    </div>
    <table class="table glass-background table-bordered text-white">
        <thead>
            <tr class="text-center">
            <th scope="col">Content</th>
            <th scope="col">Answer</th>
            <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @words.each do |word| %>
                <tr>
                    <td>
                        <%= link_to word.content, "", class: "btn text-white" %>
                    </td>
                    <td class="text-center capitalize"><%= word.choices.find_by(is_correct: 1).content %></td>
                    <td class="text-center">
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                Action
                            </button>
                            <ul class="dropdown-menu">
                                <li><%= link_to 'Edit', "", class: "dropdown-item text-warning" %></li>
                                <li><%= link_to "Delete", "", data: {confirm: 'Are you sure?'}, :method => :delete, class: "dropdown-item text-danger" %></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-center">
    <%= will_paginate @words %>
</div>	