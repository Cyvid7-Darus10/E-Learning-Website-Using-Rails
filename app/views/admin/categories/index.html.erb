<% provide(:title, 'Category Admin') %>
<div class="container">
    <%= link_to 'Add Category', new_admin_category_path, class: "mb-3 btn btn-success float-end" %>
    <table class="table glass-background table-bordered text-white">
        <thead>
            <tr class="text-center">
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Words</th>
            <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @categories.each do |category| %>
                <tr>
                    <td>
                        <%= link_to " " + category.title, admin_category_words_path(category), class: "btn text-white bi bi-eye-fill" %>
                    </td>
                    <td><%= category.description %></td>
                    <td class="text-center"><%= category.words.count %></td>
                    <td class="text-center">
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                Action
                            </button>
                            <ul class="dropdown-menu">
                                <li><%= link_to 'Add Word', "", class: "dropdown-item text-primary" %></li>
                                <li><%= link_to 'Edit', edit_admin_category_path(category), class: "dropdown-item text-warning" %></li>
                                <li><%= link_to "Delete", admin_category_path(category), data: {confirm: 'Are you sure?'}, :method => :delete, class: "dropdown-item text-danger" %></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-center">
    <%= will_paginate @categories %>
</div>	