<%= form_with do |f| %>
    <div class="form-group mt-4">
        <%= f.label :content, class:"fw-bolder" %>
        <%= f.text_field :content, class: "form-control" %>
    </div>
    <hr>
    <%= f.fields_for :choices do |choice_f| %>
        <div class="input-group mt-4">
            <%= choice_f.text_field :content, placeholder: "Choice 1", class: "form-control me-2" %>
            <%= f.radio_button :is_correct, true, class: "form-check-input" %>
        </div>
        <div class="input-group mt-4">
            <%= choice_f.text_field :content, placeholder: "Choice 2", class: "form-control me-2" %>
            <%= f.radio_button :is_correct, true, class: "form-check-input" %>
        </div>
        <div class="input-group mt-4">
            <%= choice_f.text_field :content, placeholder: "Choice 3", class: "form-control me-2" %>
            <%= f.radio_button :is_correct, true, class: "form-check-input" %>
        </div>
    <% end %>
    
    <%= f.submit class:"btn btn-primary w-100 mt-3" %>
<% end %>