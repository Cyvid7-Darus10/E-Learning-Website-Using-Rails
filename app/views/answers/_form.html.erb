<% @word.choices.each do |choice| %>
    <%= form_with model: [@lesson, @answer], local: true do |f| %>
        <%= f.hidden_field :word_id, value: @word.id %>
        <%= f.hidden_field :choice_id, value: choice.id %>
        <%= f.submit choice.content, class:"btn btn-primary w-100 mt-3" %>
    <% end %>
<% end %>