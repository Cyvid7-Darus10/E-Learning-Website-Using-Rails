<% provide(:title, 'Answer Category') %>
<div class="container mt-3">
    <div class="col-xl-6 mx-auto glass-background p-3 rounded">
        <%= render "shared/error_messages", object: @answer %>
        <h1 class="text-center">
            <%= @category.title %>
        </h1>
        <h3 class="text-center text-warning">
            <%= @word.content %>
            <span class="text-info">
                (<%= @lesson.words.count + 1 %> of <%= @category.words.count %>)
            </span>
        </h3>
        <%= render "form" %>
    </div>
</div>